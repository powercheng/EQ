<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="80dp"

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginLeft="10dp"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="I am a title"
        android:textSize="20dp"
        android:id="@+id/upcomming_name"/>
    <RelativeLayout
        android:id="@+id/InnerRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp">

        <TextView
            android:text="10/29/1292 12:22"
            android:id="@+id/upcoming_date"
            android:layout_alignParentRight="true"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:textSize="13dp"
>
        </TextView>

        <TextView
            android:id="@+id/upcoming_holder"
            android:layout_width="match_parent"
            android:layout_toLeftOf="@id/upcoming_date"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:text="i m a holder">
        </TextView>

    </RelativeLayout>
</LinearLayout>
