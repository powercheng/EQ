<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="15dip" />
            <stroke android:width="1dip" android:color="#ffee00" />
            <solid android:color="#ffee00"/>
            <!--<gradient android:angle="-90" android:startColor="#345953" android:endColor="#3300ff"  />-->
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="15dip" />
            <stroke android:width="1dip" android:color="#ffee00" />
            <solid android:color="#ffee00"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="15dip" />
            <stroke android:width="1dip" android:color="#ff0004" />
            <solid android:color="#ff0004"/>

            <!--<gradient android:angle="-90" android:startColor="#8dbab3" android:endColor="#58857e" />-->
        </shape>
    </item>
</selector>